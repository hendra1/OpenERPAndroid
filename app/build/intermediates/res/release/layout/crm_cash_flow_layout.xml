<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="?android:attr/actionBarSize">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(+) Money In"
            android:id="@+id/crmCashInButton"
            android:layout_weight="1.40"
            android:onClick="showFormInputIn"/>

        <Button
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="(-) Money Out"
            android:id="@+id/crmCashOutButton"
            android:onClick="showFormInputOut"/>
    </LinearLayout>


    <ListView
        android:id="@+id/crmCashFlowListView"
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:clipToPadding="false">
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync"
        android:id="@+id/cashFlowSyncButton"
        android:layout_gravity="right"
        android:onClick="sync"/>


</LinearLayout><!-- From: file:/C:/Users/ASUS/AndroidstudioProjects/openerp-mobile-crm_lead/app/src/main/res/layout/crm_cash_flow_layout.xml -->