<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.openerp.addons.crm.EntryCashFlowActivity"
    android:orientation="vertical"
    android:paddingTop="?android:attr/actionBarSize">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView android:text="Keterangan" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:textSize="20dp"
            android:layout_weight="0.05" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleEditText"
            android:layout_weight="0.67" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:text="Jumlah" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amountTextView"
            android:textSize="20dp"
            android:layout_weight="0.12" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amountEditText"
            android:layout_weight="0.50" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView android:text="Tipe" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeTextView"
            android:textSize="20dp"
            android:layout_weight="0.39"
            android:visibility="gone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeEditText"
            android:layout_weight="0.60"
            android:visibility="gone" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView android:text="Kategori" android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:id="@+id/categoryTextView"
            android:textSize="20dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/categorySpinner" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="createSampleData"/>

    Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button2"
        android:layout_gravity="right" />


</LinearLayout>
